@model ProyectoGeneral_01.Models.Categoria

@{
    ViewData["Title"] = "Editar Categoria";
}

<br />
<br />
<h3 class="text-center">Editar categoria</h3>
<form method="post" asp-action="Edit">
    <div class="row px-1 offset-1 border">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-6">
                    <label class="col-12">
                        <label asp-for="Nombre"></label>
                    </label>
                </div>
                <div class="col-6">
                    <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre de la categoria" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-6">
                    <label class="col-4">
                        <label asp-for="Orden"></label>
                    </label>
                </div>
                <div class="col-6">
                    <input asp-for="Orden" class="form-control" placeholder="Ingresa el orden de visualizacion" />
                    <span asp-validation-for="Orden" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col">
                    <button type="submit" class="btn btn-primary form-control">Actualizar</button>
                </div>
                <div class=col>
                    <a asp-action="Index" class="btn btn-success form-control">Regresar</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}